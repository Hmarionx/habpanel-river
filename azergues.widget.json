{
  "template": "<style>\n  .hum-temp-pres_widget .temp_high .icon-tile.colorize {\n    color: red;\n  }\n</style>\n<div class=\"hum-temp-pres_widget\">\n  <div class=\"row\" style=\"padding-bottom:15px;\">\n    <div class=\"col col-xs-3\">\n      <widget-icon iconset=\"'smarthome-set'\" icon=\"'temperature'\" size=\"42\"/>\n    </div>\n    <div class=\"col col-xs-9 text-left\">\n      <span>Temperature</span>\n      <div style=\"font-size: 18px\">\n        <span ng-if=\"itemValue(config.temp_item) > 0\" ng-class=\"{'temp_high': itemValue(config.temp_item) > 20}\">{{'%.1f' | sprintf:itemValue(config.temp_item)}} Â°C</span>\n        <span ng-if=\"itemValue(config.temp_item) == 'N/A'\">N/A</span>\n      </div>\n    </div>\n  </div>\n  <div class=\"row\">\n    <div class=\"col col-xs-3\">\n      <widget-icon iconset=\"'smarthome-set'\" icon=\"'thermostat'\" size=\"42\" />\n    </div>\n    <div class=\"col col-xs-9 text-left\">\n      <span>Pressure</span>\n      <div style=\"font-size: 18px\">\n        <span ng-if=\"itemValue(config.pres_item) > 0\">{{'%.1f' | sprintf:itemValue(config.pres_item)}} kPa</span>\n        <span ng-if=\"itemValue(config.pres_item) == 'N/A'\">N/A</span>\n      </div>\n    </div>\n  </div>\n</div>\n",
